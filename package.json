{
  "name": "backpack",
  "version": "1.0.0",
  "betterScripts": {
    "server:dev": {
      "command": "node server/apollo-server",
      "env": {
        "DATABASE_URI": "mongodb://localhost/backpack-dev",
        "NODE_ENV": "development",
        "SERVER_HOST": "localhost",
        "SERVER_PORT": 3003
      }
    }
  },
  "dependencies": {
    "@playlyfe/gql": "^2.6.0",
    "@types/graphql": "^0.13.4",
    "@types/node": "^10.9.4",
    "better-npm-run": "0.1.1",
    "graphql-import": "^0.6.0",
    "graphql-tools": "^3.1.1",
    "graphql-yoga": "^1.16.2",
    "moment": "^2.22.2",
    "prisma-binding": "^2.1.5",
    "tslint-microsoft-contrib": "^5.2.1",
    "typescript": "^3.0.3",
    "util": "^0.11.0",
    "when": "^3.7.8",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "prettier": "^1.14.2",
    "prettier-standard": "^8.0.1",
    "pretty-quick": "^1.6.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0"
  },
  "license": "MIT",
  "lint-staged": {
    "linters": {
      "server/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "main": "server/index.js",
  "private": false,
  "repository": "http://github.com/theponti/backpack",
  "scripts": {
    "console": "node bin/console",
    "dev": "better-npm-run server:dev",
    "format": "prettier-standard 'server/**/*.js'",
    "precommit": "pretty-quick --lint-staged",
    "start": "node build/server.js",
    "start:debug": "NODE_ENV=development nodemon",
    "prisma:rebuild": "prisma deploy && graphql get-schema --project prisma"
  }
}
