  "lint-staged": {
    "linters": {
      "server/**/*.js": [
        "prettier-standard",
        "git add"
      ]
    }
  },
  "betterScripts": {
    "server:dev": {
      "command": "node bin/server",
      "env": {
        "DATABASE_URI": "mongodb://localhost/backpack-dev",
        "NODE_ENV": "development",
        "SERVER_HOST": "localhost",
        "SERVER_PORT": 3003
      }
    }
